@model IEnumerable<BookViewModel>

@{
    ViewBag.Title = "Мойте книги.";
}

<h2 class="text-center">@ViewBag.Title</h2


@if (Model.Count() == 0)
{
    <div>Все още нямаш публикувани книги.</div>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <partial name="_BookPartial" model="@book" />
        }
    </div>
}