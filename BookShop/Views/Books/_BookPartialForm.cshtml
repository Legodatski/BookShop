@model AddBookViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Title" class="form-control" aria-required="true" />
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Description" class="form-control" aria-required="true" />
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Price" class="form-control" aria-required="true" />
                <label asp-for="Price">Price (BGN)</label>
            </div>
            <div class="form-floating">
                <input asp-for="ImageUrl" class="form-control" aria-required="true" />
                <label asp-for="ImageUrl"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Grade" class="form-control" aria-required="true" />
                <label asp-for="Grade"></label>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <label>Subject Name</label>
            <select asp-for="SubjectId" class="form-control">
                @foreach (var subject in Model.AllSubjects)
                {
                    <option value="@subject.Id">@subject.Name</option>
                }
            </select>
            <label asp-for="PublisherId"></label>
            <select asp-for="PublisherId" class="form-control">
                @foreach (var publisher in Model.AllPublishers)
                {
                    <option value="@publisher.Id">@publisher.Name</option>
                }
            </select>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
