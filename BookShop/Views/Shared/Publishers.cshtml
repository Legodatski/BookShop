@model PublishersViewModel

@{
    ViewBag.Title = "Добави издателство";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>

<p></p>
<h2 class="text-center">All publishers</h2>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        @foreach (var p in Model.Publishers)
        {
            <p>
                @p.Name <a class="ml-2 btn btn-danger" asp-area="Administration" asp-controller="Admin" asp-action="DeletePublisher"
                      asp-route-id="@p.Id">Изтрий</a>
            </p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
