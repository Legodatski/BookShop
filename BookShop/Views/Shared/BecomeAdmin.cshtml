@model BecomeAdminFormModel

@{
    ViewBag.Title = "Стани админ";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label">Въведи телефония си номер</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Изпрати</button>
                </div>
            </form>
        </section>
    </div>
</div>