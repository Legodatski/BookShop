@model EditUserModel

<form id="registerForm" method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="PhoneNumber" class="form-control"/>
        <label asp-for="PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <label asp-for="TownId">Town</label>
    <select asp-for="TownId" class="form-control">
        @foreach (var town in Model.Towns)
        {
            <option value="@town.Id">@town.Name</option>
        }
    </select>
    <label asp-for="SchoolId">School</label>
    <select asp-for="SchoolId" class="form-control">
        @foreach (var school in Model.Schools)
        {
            <option value="@school.Id">@school.Name</option>
        }
    </select>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
</form>